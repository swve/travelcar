<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Administration Travelcar{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('images/favicon.png') }}">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
</head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="{{ path('index') }}">TravelCar&trade; </a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        {% if is_granted('ROLE_USER') %}
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="{{ path('my_cars_index') }}"
              >Mes Voitures</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('my_reservations_index') }}"
              >Mes RÃ©servations</a
            >
          </li>
         
        </ul>

        {% endif %}
      </div>
      <div class="login navbar-nav my-lg-0">
        {% if is_granted('ROLE_USER') %}
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="{{ path('my_profile') }}"
            id="navbarDropdown"
            role="button"
            data-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false">
            {{ app.user.firstname }} {{ app.user.lastname }}
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="{{ path('app_logout') }}">DÃ©connexion</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="{{ path('back') }}"> ðŸš§ Administration</a>
          </div>
        </li>
        {% else %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_login') }}">Se connecter </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_register') }}">S'inscrire </a>
        </li>
        {% endif %}
      </div>
    </nav>

    <div class="container" style="padding-top:60px; padding-bottom: 60px;">
      {% block body %}{% endblock %}
    </div>
    {% block javascripts %}{% endblock %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="{{ asset('js/sweetalert2.all.min.js') }}"></script>
  </body>
</html>
