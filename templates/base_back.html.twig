<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link
      rel="stylesheet"
      href="https://bootswatch.com/4/solar/bootstrap.min.css"
    />
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="{{ path('back') }}"
        >TravelCar Administration</a
      >
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="{{ path('place_index') }}">Lieux</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('placetype_index') }}"
              >Types de lieux</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('parking_index') }}">Parkings</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('cars_index') }}">Voitures</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('available_spot_index') }}"
              >Places Parkings</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('reservation_index') }}"
              >RÃ©servations</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('parkreview_index') }}"
              >Avis Parkings</a
            >
          </li>
        </ul>
      </div>
      <div class="login navbar-nav my-lg-0">
        {% if is_granted('ROLE_USER') %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('my_profile') }}"
            >{{ app.user.firstname }} {{ app.user.lastname }} |
            <span class="badge badge-danger">Administrateur</span>
          </a>
        </li>
        {% endif %}
      </div>
    </nav>
    <div class="container">
      <br /><br />
      {% block body %}{% endblock %}
    </div>
    {% block javascripts %}{% endblock %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  </body>
</html>
