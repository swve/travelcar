{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}

<div>
    <h1>My Profile</h1>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ user.firstname }} {{ user.lastname }}</h5>
            <p class="card-text">{{ user.email }}</p>

        </div>
        <ul class="list-group list-group-flush">

            <li class="list-group-item">
                <b>Last Login</b><br>
            </li>
            <li class="list-group-item">
                <p class="btn-group">

                </p>
                <p>
                    <a class="btn btn-outline-danger" href="{{ path('app_logout') }}"><i class="fa fa-power-off"></i> Log Out</a>
                </p>
            </li>
        </ul>
    </div>



</div>
{% endblock %}
