<form
  method="post"
  action="{{ path('my_reservations_delete', { id: reservation.id }) }}"
  id="cancelmyreservationform"
>
  <input type="hidden" name="_method" value="DELETE" />
  <input
    type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ reservation.id) }}"
  />
  <a
    class="btn btn-danger"
    onclick="AnnulerReservation()"
    style="cursor: pointer"
    >Annuler ma réservation</a
  >
</form>
